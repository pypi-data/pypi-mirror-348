# Include all Python source files
recursive-include slide *.py

# Include important project files in the distribution
include README.md
include LICENSE

# Exclude the tests directory
exclude tests/
exclude tests/*

# Exclude compiled files or any other unwanted files
exclude slide/**/*.c
exclude slide/**/*.so
exclude slide/**/*.dll
exclude slide/**/*.pyd

# Optionally exclude bytecode files if necessary
exclude slide/**/*.pyc
exclude slide/**/*.pyo
