FROM gaarangoa/dsai:version-2.0.3_tf2.6.0_pt1.9.0

ARG NB_USER=pbmf
ARG NB_UID=1000
ENV USER ${NB_USER}
ENV NB_UID ${NB_UID}
ENV HOME /home/${NB_USER}

# RUN adduser --disabled-password \
#     --gecos "Default user" \
#     --uid ${NB_UID} \
#     ${NB_USER}

# Make sure the contents of our repo are in ${HOME}
COPY . ${HOME}
USER root
RUN chown -R ${NB_UID} ${HOME} 

RUN pip install --no-cache-dir git+https://github.com/gaarangoa/samecode.git

WORKDIR ${HOME}
RUN pip install .