from pybuild import Pybuild1


class Package(Pybuild1):
    NAME = "Test"
    KEYWORDS = "test"
    LICENSE = "test"
    DESC = "test desc"
    HOMEPAGE = "https://example.org"
    IUSE = "alias2"
    RESTRICT = "fetch"

    SRC_URI = "alias2? ( Foo.zip )"

    def pkg_pretend(self):
