{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "pip-compile": {
    "managerFilePatterns": [
      "/(^|/)requirements\\.txt$/",
      "/(^|/)linter\\.txt$/",
      "/(^|/)pre-commit\\.txt$/"
    ]
  },
  "pip_requirements": {
    "enabled": false
  },
  "pip_setup": {
    "enabled": false
  },
  "pre-commit": {
    "enabled": true
  }
}
