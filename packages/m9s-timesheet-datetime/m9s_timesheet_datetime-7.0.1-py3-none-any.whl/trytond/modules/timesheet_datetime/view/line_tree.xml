<data>
    <xpath expr="/tree" position="replace_attributes">
        <tree editable="1"/>
    </xpath>
    <xpath expr="/tree/field[@name='date']" position="replace_attributes">
        <field name="date" optional="1"/>
    </xpath>
    <xpath expr="/tree/field[@name='duration']" position="before">
	<field name="start_time" widget="date"/>
	<field name="start_time" widget="time" string="Start Time"/>
	<field name="end_time" widget="date"/>
	<field name="end_time" widget="time" string="End Time"/>
    </xpath>
</data>
