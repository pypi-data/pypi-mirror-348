<odoo>
    <record model="ir.ui.view" id="sale_order_country_allowed_product_view_order_form">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <sheet position="before">
                <div
                    class="alert alert-warning"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible': [('unavailable_product_msg', '=', '')]}"
                >
                    <field name="unavailable_product_msg" />
                </div>
                <!-- This is necessary so partner_shipping_id can be used in context,
                as it is restricted to account.group_delivery_invoice_address in the
                original view -->
                <field name="partner_shipping_id" invisible="1" />
            </sheet>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_template_id']"
                position="attributes"
            >
                <attribute name="context" operation="update">
                    {'restrict_by_country': True, 'restrict_by_country_partner_id': parent.partner_shipping_id}
                </attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_id']"
                position="attributes"
            >
                <attribute name="context" operation="update">
                    {'restrict_by_country': True, 'restrict_by_country_partner_id': parent.partner_shipping_id}
                </attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']/form//field[@name='product_id']"
                position="attributes"
            >
                <attribute name="context" operation="update">
                    {'restrict_by_country': True, 'restrict_by_country_partner_id': parent.partner_shipping_id}
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
