<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="portal_timesheet_table"
        inherit_id="hr_timesheet.portal_timesheet_table"
        priority="100"
    >
        <xpath
            expr="//tr[@t-foreach='timesheets']/td/t[@t-esc='timesheet.name']"
            position="replace"
        >
            <t t-esc="timesheet.name_customer" />
        </xpath>
    </template>

    <template
        id="portal_my_timesheets"
        inherit_id="hr_timesheet.portal_my_timesheets"
        priority="100"
    >
        <xpath expr="//span[@t-esc='timesheet.name']" position="replace">
            <span
                t-esc="timesheet.name_customer"
                t-att-title="timesheet.name_customer"
            />
        </xpath>
    </template>
</odoo>
