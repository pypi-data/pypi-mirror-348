{
    "$id": "material/reusable/stack/stack-of-slabs",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Stack of Slabs Configuration Schema",
    "description": "Configuration for a stack of multiple slabs.",
    "properties": {
        "stack_slab_configurations": {
            "type": "array",
            "description": "List of slab configurations for the slabs in the stack",
            "items": {
                "$ref": "./slab_in_stack.json"
            },
            "minItems": 2
        },
        "stacking_direction": {
            "type": "string",
            "description": "The axis along which the slabs are stacked",
            "allOf": [
                {
                    "$ref": "../../../core/primitive/axis_3d_names_enum.json"
                }
            ],
            "default": "z"
        }
    },
    "required": [
        "stack_slab_configurations"
    ]
}


