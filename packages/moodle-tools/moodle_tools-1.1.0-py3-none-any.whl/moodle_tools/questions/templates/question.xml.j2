{% if category %}
<question type="category">
    <category>
        <text>$module$/{{ category }}</text>
    </category>
</question>
{% endif %}
<question type="{{ type }}">
    <name>
        <text>{{ title }}</text>
    </name>
    <questiontext format="html">
        <text><![CDATA[{{ question }}]]></text>
    </questiontext>
    <generalfeedback format="html">
        <text>{{ "<![CDATA[{}]]>".format(general_feedback) if general_feedback }}</text>
    </generalfeedback>
    {% block content -%}
    <idnumber></idnumber>
    <defaultgrade>{{ grade }}</defaultgrade>
    <penalty>0</penalty>
    <hidden>0</hidden>
    {%- endblock %}
</question>
