# PSQL Query Builder - Sample Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL Connection (Option 1: Full connection string)
# PSQL_CONNECTION_STRING=postgresql://username:password@host:port/dbname?sslmode=require

# PostgreSQL Connection (Option 2: Individual parameters)
PSQL_HOST=localhost
PSQL_PORT=5432
PSQL_DBNAME=your_database
PSQL_USER=your_username
PSQL_PASSWORD=your_password
PSQL_SSLMODE=prefer  # Options: disable, allow, prefer, require, verify-ca, verify-full

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key
# OPENAI_MODEL=gpt-4o-mini  # Optional, defaults to gpt-4o-mini in the code

# Logging Configuration (Optional)
# LOGURU_LEVEL=INFO  # Options: TRACE, DEBUG, INFO, SUCCESS, WARNING, ERROR, CRITICAL
