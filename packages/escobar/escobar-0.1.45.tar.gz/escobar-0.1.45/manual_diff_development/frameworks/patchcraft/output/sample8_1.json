      +      "facebook": {
        +        "clientId": "facebook-client-id",
        +        "clientSecret": "facebook-client-secret"
      +      }
    +    }
  },
  "logging": {
    +    "level": "error",
    "format": "json",
    +    "output": "file",
    +    "directory": "/var/log/sampleapp",
    +    "maxSize": "10m",
    +    "maxFiles": 5,
    +    "compress": true
