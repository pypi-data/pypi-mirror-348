{
  +  "appName": "SampleApp Pro",
  +  "version": "2.1.0",
  +  "description": "An enhanced sample JSON configuration file",
  +  "environment": "production",
  +  "debug": false,
  +  "appId": "com.example.sampleapp",
  "server": {
    +    "host": "api.example.com",
    +    "port": 443,
    +    "protocol": "https",
    +    "timeout": 60000,
    +    "maxConnections": 1000,
    +    "keepAliveTimeout": 5000
  },
  "database": {
    +    "type": "postgresql",
    +    "host": "db.example.com",
